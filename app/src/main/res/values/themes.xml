<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--Light Theme-->
    <style name="Theme.MotChiecNhac" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--BackgroundColor-->
        <item name="bgColor">@color/light_bg</item>
        <!--TextColor-->
        <item name="txtColor">@color/light_txt</item>
        <!--CdColor-->
        <item name="cdColor">@color/light_cd</item>
        <!--Gradient Color-->
        <item name="startColor">@color/dark_bg</item>
        <item name="endColor">#42193D</item>

        <item name="headerColor">@color/round2</item>
    </style>

    <style name="Theme.MotChiecNhac.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MotChiecNhac.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MotChiecNhac.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>